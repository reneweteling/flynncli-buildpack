#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e

BUILD_DIR=$1
CACHE_DIR=$2

BIN_PATH="$BUILD_DIR/bin"
FLYNN_PATH="$BIN_PATH/flynn"

# wget -O $FLYNN_PATH https://dl.flynn.io/cli 
# chmod +x $FLYNN_PATH

curl -sSL -A "`uname -sp`" https://dl.flynn.io/cli | zcat >$FLYNN_PATH && chmod +x $FLYNN_PATH