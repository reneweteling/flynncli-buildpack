#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e

BUILD_DIR=$1
CACHE_DIR=$2

BIN_PATH="$BUILD_DIR/bin"
FLYNN_PATH="$BIN_PATH/flynn"
FLYNN_CACHE="$CACHE_DIR/flynn"

if [ -f $FLYNN_CACHE ]; then
  echo "-----> Using flynncli from cache"
else
  echo "-----> Downloading flynncli to cache dir"
  curl -L https://dl.flynn.io/cli -o $FLYNN_CACHE
fi

echo "-----> Copy file"
cp $FLYNN_CACHE $FLYNN_PATH

echo "-----> Setting permissions"
chmod +x $FLYNN_PATH